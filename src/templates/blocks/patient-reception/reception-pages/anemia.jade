        .step
            .title Шаг 2. Уточните диагноз

            .row
                table.transparent.nosologies
                    thead
                        tr
                            th
                            th Вероятная нозология
                            th
                            th Нозология в диагнозе

                    tbody
                        tr
                            td.hold-right
                                .label-big
                                    | Анемия
                                    span.fa.fa-info-circle
                            td
                                select
                                    option Не выявлена
                                    option (D63.8) Анемия почечная (ренальная/нефрогенная)
                            td
                                .button.icon-button
                                    .fa.fa-angle-double-right

                            td
                                input( value = '(D63.8) Анемия почечная (ренальная/нефрогенная)' )


                        tr
                            td.hold-right
                                .label-big
                                    | Железодефицит
                                    span.fa.fa-info-circle
                            td
                                select
                                    option Не выявлена
                                    option (E61.1) Абсолютный железодефицит
                            td
                                .button.icon-button
                                    .fa.fa-angle-double-right

                            td
                                input( value = 'Не выявлена' )