.anemia
    .header
        .left
            ul.tabs
                li.tab-title.active
                    a Диагностика

                li.tab-title.open-anemia-program
                    a Программа лечения

        .right
            .button Показать график


    .reception-form-content
        .step
            .title Шаг 1. Проверьте лабораторные исследования

            .row
                table.transparent.measures
                    thead
                        tr
                            th
                            th Значение
                            th Ед.изм
                            th Дата измерения
                            th Динамика

                    tbody
                        tr
                            td.hold-right
                                .label-big Гемоглобин (Hb), (HGB), (Hemoglobin)
                            td
                                input( value = '5' )
                            td
                                input( value = 'г/л' )
                            td
                                .date
                                    input( value = '29.02.2016' )
                                    .button.icon-button
                                        .fa.fa-calendar
                            td
                                img( src = 'i/content/small-graph.png' )


                        tr
                            td.hold-right
                                .label-big Эритроциты, (RBC), (Red (Blood) Cells)
                            td
                                input( value = '4' )
                            td
                                input( value = '*10^12/л' )
                            td
                                .date
                                    input( value = '29.02.2016' )
                                    .button.icon-button
                                        .fa.fa-calendar
                            td
                                img( src = 'i/content/small-graph.png' )


                        tr
                            td.hold-right
                                .label-big Сывороточное железо, (Fe), (Serum Iron)
                            td
                                input( value = '18.05' )
                            td
                                input( value = 'мкмоль/л' )
                            td
                                .date
                                    input( value = '29.02.2016' )
                                    .button.icon-button
                                        .fa.fa-calendar
                            td
                                img( src = 'i/content/small-graph.png' )

                        tr
                            td.hold-right
                                .label-big Ферритин, (Ferri), (Ferritin)
                            td
                                input( value = '1234' )
                            td
                                input( value = 'мкг/л' )
                            td
                                .date
                                    input( value = '29.02.2016' )
                                    .button.icon-button
                                        .fa.fa-calendar
                            td
                                img( src = 'i/content/small-graph.png' )


                        tr
                            td.hold-right
                                .label-big Трансферрин, (Transf), (Transferrin (TF))
                            td
                                input( value = '123' )
                            td
                                input( value = 'г/л' )
                            td
                                .date
                                    input( value = '29.02.2016' )
                                    .button.icon-button
                                        .fa.fa-calendar
                            td
                                img( src = 'i/content/small-graph.png' )


                        tr
