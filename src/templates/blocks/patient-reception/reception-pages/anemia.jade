                                .label-big Насыщение трансферрина железом (TR%FE), (НТ)
                            td
                                input( value = '61.4' )
                            td
                                input( value = '%' )
                            td
                                .date
                                    input( value = '29.02.2016' )
                                    .button.icon-button
                                        .fa.fa-calendar
                            td
                                img( src = 'i/content/small-graph.png' )

                        tr
                            td.hold-right
                                .label-big С-реактивный белок, (CRP), (C-reactive protein)
                            td
                                input( value = '' )
                            td
                                input( value = '' )
                            td
                                .date
                                    input( value = '' )
                                    .button.icon-button
                                        .fa.fa-calendar
